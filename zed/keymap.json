  {
    "context": "Terminal",
    "bindings": {
      "alt-left": ["terminal::SendKeystroke", "alt-left"],
      "alt-right": ["terminal::SendKeystroke", "alt-right"],
      "alt-up": ["terminal::SendKeystroke", "alt-up"],
      "alt-down": ["terminal::SendKeystroke", "alt-down"],
      "alt-/": "workspace::ActivatePaneLeft"
    }
  }
