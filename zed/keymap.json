  {
    "context": "Editor",
    "bindings": {
      "ctrl-p r": "pane::SplitRight"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-p d": "pane::SplitDown"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-right": "workspace::ActivatePaneRight",
